<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper  namespace="com.bd10.knowledgesystems.dao.others.AboutusDao">
    <select id="queryAbouts"  resultType="com.bd10.knowledgesystems.model.dto.Abouts">
             select * from   aboutus  WHERE aboutus_id =1;
    </select>
    <update id="upateAbouts">
     UPDATE  aboutus  SET  aboutus_content =#{aboutus_content}  WHERE  aboutus_id=1
    </update>

</mapper>